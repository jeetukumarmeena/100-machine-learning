
class Atm:
    #constructor(special function)->superpower->
    def __init__(self) -> None:
        self.pin =""
        self.balance =0
        self.menu()
    def menu(self):
        user_input=input("""
            hi how can i help you
            1.press 1 to create pin
            2.press 2 to change the pin
            3.press 3 to check balance
            4. withdraw
            5.exit  """)
        if user_input =='1':
            #create pin
            self.create_pin()
        elif user_input =='2':
            self.change_pin()
            #change the pin
        elif user_input =='3':
            self.check_balance()
            #check the balance
        elif user_input == '4':
            self.withdraw()
            #withdraw
        else:
            exit()
    def create_pin(self):
        user_pin =int(input("enter the pin"))
        self.pin =user_pin
        user_balance=input("enter balance")
        self.balance =user_balance
        print("pin create successfully....")
        self.menu()
    def change_pin(self):
      old_pin=int(input("enter old pin"))
      if old_pin ==self.pin:
        #let him change the password
        new_pin =int(input('enter the pin'))
        self.pin =new_pin
        print('pin change successfully...')
        self.menu()
      else:
        print("nai karne de sakta re don")
        self.menu()
    def check_balance(self):
      user_pin=input("enter pin")
      if self.pin==user_pin:
        print('your balance is',self.balance)
      else:
        print("chal nikal yaha se")
    def withdraw(self):
      user_pass =input('enter your pin')
      if self.pin==user_pass:
        user_amount =input('enter withdraw amount')
        if user_amount<=self.balance:
          self.balance =self.balance-user_amount
          print('withdraw successfully balance is',self.balance)

        else:
          print("chal be chor chor")
      else:
        print('chal nikal chor')
        self.menu()




